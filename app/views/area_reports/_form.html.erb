<%= form_for @area_report, html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :area_id %>
      <%= f.select :area_id, area_select, {}, {class: 'form-control select2theme'} %>
    </div>
    <div class="form-group">
      <%= f.label :attendees %>
      <%= f.text_field :attendees, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :area_status %>
      <%= f.text_field :area_status, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :area_needs %>
      <%= f.text_field :area_needs, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :events %>
      <%= f.text_field :events, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :news %>
      <%= f.text_field :news, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :motions %>
      <%= f.text_field :motions, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>
      <%= f.hidden_field :created_by, value: current_user.email %>
    </div>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.submit 'Submit your report', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>

