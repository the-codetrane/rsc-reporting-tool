<div class="container">
  <div class="row" id="admin-header">
    <h2 align="center">Admin Dashboard</h2>
  </div>
  <div class="row">
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <th>Name</th>
      <th>Role</th>
      <th>Group</th>
      <th>Committee</th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.na_name, member_path(user.id) %></td>
            <td><%= best_in_place_if current_user.is_admin?, user, :role_id, as: :select, collection: members_roles_helper, value: user.role, url: member_path(user.id) %></td>
            <td><%= best_in_place_if current_user.is_admin?, user, :group_id, as: :select, collection: members_group_select, value: user.group, url: member_path(user.id) %></td>
            <td><%= best_in_place_if current_user.is_admin?, user, :committee_id, as: :select, collection: members_committee_select, value: user.committee, url: member_path(user.id) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>