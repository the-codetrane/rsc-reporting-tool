<%= form_for @report, html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :committee %>
      <%= f.text_field :committee, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :attendees %>
      <%= f.text_field :attendees, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :old_business %>
      <%= f.text_area :old_business, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :new_business %>
      <%= f.text_area :new_business, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Submit your report', class: 'btn btn-success' %>
    </div>
<% end %>