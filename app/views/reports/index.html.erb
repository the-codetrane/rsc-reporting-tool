<div class="jumbotron">
  <h2 align="center">Regional Subcommittee Reports</h2>
</div>

<table class="table table-striped table-hover datatable" id="reports-table">
  <thead>
  <tr>
    <th> Title</th>
    <th> Committee</th>
    <th> Submitted</th>
    <th> Last Updated At</th>
    <th> Submitted By</th>
    <th> Edit Report</th>
    <th> Email Report</th>
  </tr>
  </thead>
  <tbody>
  <% @reports.each do |r| %>
      <tr>
        <td><%= link_to r.title, report_path(r) %></td>
        <td><%= r.report_committee %></td>
        <td><%= r.created_at.strftime('%b %d, %Y') %></td>
        <td><%= r.updated_at.strftime('%b %d, %Y') %></td>
        <% if r.created_by %>
            <td> <%= reports_submitted_by(r.created_by) %></td>
        <% else %>
            <td> submitter unknown</td>
        <% end %>
        <% if r.created_by == current_user.email %>
            <td><%= link_to 'Edit Report', edit_report_path(r), class: 'btn btn-primary btn-xs' %></td>
            <td> <%= link_to('Send email', committee_email_path, class: 'btn btn-success btn-xs')%></td>
        <% else %>
            <td></td>
            <td></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>